<h1>Posts</h1>

<%= content_tag :ul do %>
  <%= content_tag_for :li, @posts do |post| %>
    <%= post.title %> (<%= l(post.updated_at) %>
    <%= content_tag :p, post.body %>
  <% end %>
<% end %>

<%= link_to "Write new post", [:new, :post] %>


<hr>
<p>Content of API_KEY: <%= ENV.fetch('API_KEY', "UNSET").inspect %></p>
